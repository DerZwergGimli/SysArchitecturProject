#!/bin/bash
echo "This will now install the vehicle project!";
sleep 3;
echo "Check for updates";
sudo apt update;
sudo apt upgrade -y;
sudo apt intsall wget;
mkdir ~/vehicle/armv7
wget -P ~/vehicle/armv7/ https://github.com/DerZwergGimli/SysArchitecturProject/blob/master/Vehicle_Project/build/armv7/SysArchVehicle_armv7
mkdir ~/vehicle/communicationManager
wget -P ~/vehicle/communicationManager https://github.com/DerZwergGimli/SysArchitecturProject/blob/master/CommManager/out/artifacts/CommManager_jar2/CommManager.jar
sudo cp vehicle.service /etc/systemd/system/vehicle.service

sudo cp communicationManager.service /etc/systemd/system/vehicle.service
